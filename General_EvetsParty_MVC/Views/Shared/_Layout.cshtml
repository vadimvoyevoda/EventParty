<!DOCTYPE html>
<html>
<head>
    <title>Events Party</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
            
    <link href="/Content/autocomplete/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" type="text/css"/>
    <link href="/Content/bootstrap.css" rel='stylesheet' type='text/css' />    
    <link href="/Content/style.css" rel='stylesheet' type='text/css' />

    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <script type="text/javascript" src="/Scripts/autocomplete/jquery-1.10.2.js" ></script> 
    <script src="/Scripts/autocomplete/jquery-ui-1.10.4.custom.min.js" type="text/javascript"></script>	
            
    <script type="text/javascript" src="/Scripts/modernizr-2.5.3.js" ></script>   
    <script type="text/javascript" src="/Scripts/jquery.mousewheel.js"></script>
    <script type="text/javascript" src="/Scripts/jquery.contentcarousel.js"></script>
    <script type="text/javascript" src="/Scripts/jquery.easing.1.3.js"></script>    
    <script type="text/javascript" src="/Scripts/moment-with-locales.min.js"></script>

    <script type="text/javascript" src="/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="/Scripts/bootstrap-datetimepicker.js"></script>
    <script type="text/javascript" src="/Scripts/bootstrap-datepicker.min.js"></script>
    
     <script type="text/javascript">
         jQuery(document).ready(function ($) {
             $(".scroll").click(function (event) {
                 event.preventDefault();
                 $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1200);
             });
         });
    </script>
    
    @RenderSection("head", false)
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="header-text">               
                <h1>Events Party</h1>                
                <h2>for all people</h2>
                <p>Everyone can find something for themselves</p>
                <div class="banner_btn">
                    <a href="#">Read More</a>
                </div>
            </div>
        </div>
    </div>
    <div class="menu" id="menu">
        <div class="social">
            <ul>
                <li class="facebook"><a href="https://www.facebook.com/"><span> </span></a></li>
                <li class="twitter"><a href="https://twitter.com/"><span> </span></a></li>
                <li class="pinterest"><a href="#"><span> </span></a></li>
                <li class="google"><a href=""><span> </span></a></li>
                <li class="tumblr"><a href="#"><span> </span></a></li>
                <li class="instagram"><a href="https://instagram.com/"><span> </span></a></li>
                <li class="rss"><a href="#"><span> </span></a></li>
            </ul>
        </div>
        <div class="container">
            <div class="h_menu4">
                <a class="toggleMenu" href="#">Menu</a>
                <ul class="nav">
                    <li id="home"><a href="/Home/Index">Home<img id="iconImg" src="/images/home.png" /></a></li>
                    <li id="advancedSearch"><a href="/Event/AdvancedSearch">Advanced Search<img id="iconImg" src="/images/search.gif" /></a></li>
                    <li id="addEvent"><a href="/Event/Index">Add Event<img id="iconImg" src="/images/add.png" /></a></li>
                    <li id="about"><a href="">About us<img id="iconImg" src="/images/about.png" /></a></li>
                    <li id="profile"><a href="/Profile/Index"><span id="profileName">@( String.IsNullOrEmpty(HttpContext.Current.User.Identity.Name) ? "My Profile" : HttpContext.Current.User.Identity.Name)</span><img id="iconImg" src="/images/user.png" /></a></li>   
                    @if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        <li id="logout"><a href="/Profile/LogOut"><span style="color:black;">Log Out</span><img id="iconImg" src="/images/lock.png" /></a></li>
                    }                  
                </ul>
            </div><!-- end h_menu4 -->
            <div class="clear"></div>
        </div>
    </div>
    <div class="header-arrow">
        <a href="#menu" class="class scroll"><span> </span></a>
    </div>
    <div class="main">
        @RenderBody()        
    </div>
    <div class="footer-bottom">
        <div class="container">
            <div class="row section group">
                <div class="col-md-4">
                    <h4 class="m_7">Contact us</h4>
                    <form class="subscribe">
                        <input type="text" value="Insert Email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Insert Email';}">
                        <input type="text" value="Enter your message" onfocus="this.value = '';" onblur="    if (this.value == '') { this.value = 'Enter your message'; }">
                    </form>
                    <div class="subscribe1">
                        <a href="#">Send Message<i class="but_arrow"> </i></a>
                    </div>
                </div>
                <div class="f-logo">
                    <img src="/images/logo.png" alt="" />
                </div>
                <div class="col-md-4">                    
                    <h3>For All People</h3>
                    <p class="m_9">Everyone can find something for themselves</p>
                </div>
                <div class="col-md-4">
                    <ul class="list">
                        <h4 class="m_7">Menu</h4>
                        <li><a href="#">Advanced Search</a></li>
                        <li><a href="/Event/Index">Add Event</a></li>
                        <li><a href="#">About Us</a></li>
                        <li><a href="/Profile/Index">My Profile</a></li>
                    </ul>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
    <div class="copyright">
        <div class="container">
            <div class="copy">
                <p>© 2015 Vadim Voyevoda</a></p>
            </div>            
        </div>
    </div>
</body>
</html>
